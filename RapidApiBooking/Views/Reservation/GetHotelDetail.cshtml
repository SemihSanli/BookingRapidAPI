@model HotelDetailViewModel
@{
    ViewData["Title"] = "Otel Detayı";
    Layout = "~/Views/Shared/_UILayout/_UILayout.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

<style>
    .hotel-detail-card {
        background: #fff;
        border-radius: 18px;
        box-shadow: 0 8px 32px rgba(0,0,0,0.12);
        max-width: 700px;
        margin: 40px auto;
        overflow: hidden;
        transition: box-shadow 0.3s;
    }

    .hotel-detail-img img {
        width: 100%;
        height: 320px;
        object-fit: cover;
        border-bottom: 1px solid #eee;
    }

    .hotel-detail-info {
        padding: 32px 28px 24px 28px;
    }

        .hotel-detail-info h2 {
            font-size: 2.1rem;
            font-weight: 700;
            margin-bottom: 12px;
            color: #2d2d2d;
        }

        .hotel-detail-info .city {
            font-size: 1.1rem;
            color: #888;
            margin-bottom: 18px;
        }

        .hotel-detail-info .price {
            font-size: 1.5rem;
            color: #007bff;
            font-weight: 600;
            margin-bottom: 18px;
        }

        .hotel-detail-info .review {
            font-size: 1.1rem;
            color: #444;
            margin-bottom: 10px;
        }

        .hotel-detail-info .back-link {
            display: inline-block;
            margin-top: 18px;
            color: #007bff;
            text-decoration: none;
            font-weight: 500;
            transition: color 0.2s;
        }

            .hotel-detail-info .back-link:hover {
                color: #0056b3;
                text-decoration: underline;
            }
</style>

<div class="hotel-detail-card">
    <div class="hotel-detail-img">
        <img src="@Model.CoverImageURL" />
    </div>
    <div class="hotel-detail-info">
        <div class="city"><i class="fa fa-map-marker-alt"></i> @Model.City</div>
        <div class="price"><i class="fa fa-tag"></i> @Model.Price</div>
        <a href="javascript:history.back()" class="back-link"><i class="fa fa-arrow-left"></i> Geri Dön</a>
    </div>
</div>
