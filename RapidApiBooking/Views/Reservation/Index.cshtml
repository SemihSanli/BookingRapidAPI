
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UILayout/_UILayout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
<section class="banner_main">
    <div id="myCarousel" class="carousel slide banner" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img class="first-slide" src="/keto-1.0.0/images/banner1.jpg" alt="First slide">
                <div class="container">
                </div>
            </div>
            <div class="carousel-item">
                <img class="second-slide" src="/keto-1.0.0/images/banner2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="third-slide" src="/keto-1.0.0/images/banner3.jpg" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    
    <div class="booking_ocline">
        <div class="container">
            <div class="row">
                <div class="col-md-5">
                    <div class="book_room">
                        <h1>Size Uygun Otelleri Bulalım</h1>
                        <form class="book_now" asp-action="SearchReservation" method="post">
                            <div class="row">
                                <div class="col-md-12">
                                    <span>Şehir Adı </span>
                                    <img class="date_cua" src="~/keto-1.0.0/images/date.png">
                                    <input class="online_book" placeholder="Şehir Adı: " type="text" name="query">
                                </div>
                                <div class="col-md-12">
                                    <span>Giriş Tarih'i</span>
                                    <img class="date_cua" src="~/keto-1.0.0/images/date.png">
                                    <input class="online_book" placeholder="dd/mm/yyyy" type="text" name="checkinDate">
                                </div>
                                <div class="col-md-12">
                                    <span>Çıkış Tarih'i</span>
                                    <img class="date_cua" src="~/keto-1.0.0/images/date.png">
                                    <input class="online_book" placeholder="dd/mm/yyyy" type="text" name="checkoutDate">
                                </div>
                                <div class="col-md-12">
                                    <span>Yetişkin Sayısı</span>
                                    <img class="date_cua" src="~/keto-1.0.0/images/date.png">
                                    <input class="online_book" placeholder="Yetişkin Sayısı" type="text" name="adults">
                                </div>
                                <div class="col-md-12">
                                    <span>Çocuk Sayısı</span>
                                    <img class="date_cua" src="~/keto-1.0.0/images/date.png">
                                    <input class="online_book" placeholder="Çocuk Sayısı" type="text" name="children">
                                </div>
                                <div class="col-md-12">
                                    <button class="book_btn">Otel Ara</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

